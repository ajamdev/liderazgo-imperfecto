---
import Section from "../ui/Section.astro";
import { getCollection } from "astro:content";
const profile = await getCollection('profile');
import { Image } from "astro:assets";
---

<Section>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
    {
      profile.map((profile: any)=>{
        const {slug, data} = profile
        const {image, title, description} = data
        return (
          <a href={`/perfil/${slug}`} class="group">
            <article class="overflow-hidden rounded-xl block shadow-lg">
              <div class="overflow-hidden">
                <Image src={image} alt={`foto de ${title}`} width={650} height={180} transition:name={`img-${slug}`} class="aspect-video object-top object-cover transition-all transform group-hover:scale-110 duration-300"/>
              </div>
              <div class="space-y-5 p-5">
                <div class="prose">
                  <h2 class="text-[clamp(var(--text-lg),5vw,var(--text-xl))]">{title}</h2>
                  <p class="text-sm text-muted-foreground">{description}</p>
                </div>
                <span class="px-4 py-2 bg-amarillo-mostaza font-bold text-white rounded-lg">Leer m√°s</span>
              </div>
            </article>
          </a> 
        )
      })
    }
  </div>
</Section>
