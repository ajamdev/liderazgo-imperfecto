---
interface Situations {
  name: string
  description: string
  icon: {
    name: any
  }
}
const { name, description, icon } = Astro.props as Situations;
---
<li>
  <article class="w-full h-full bg-dark-green rounded-xl p-6 text-lightgreen">
    <header>
      <icon.name />
      <h3 class="text-lightgreen text-h3 my-h3 font-Season-mix text-balance">{name}</h3>
    </header>
    <p class="text-p my-p text-pretty">{description}</p>
  </article>
</li>
